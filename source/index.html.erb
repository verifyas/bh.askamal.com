<script>
  var initialX = null;
  var offsetX = 0;

  function downHandler(ev) {
    console.info("down", ev.clientX);
    let el = document.getElementById("target");
    initialX = ev.clientX;
    el.onpointermove = moveHandler;
  }

  function moveHandler(ev) {
    console.info("move", ev.clientX);
    let el = document.getElementById("target");
    el.style.left = offsetX - (initialX - ev.clientX) + 'px';
  }

  function cancelHandler(ev) {
    console.info("cancel", ev.clientX);
    let el = document.getElementById("target");
    offsetX += -(initialX - ev.clientX);
    el.onpointermove = null;
  }

  (function() {
    // onload
    let el = document.getElementById("target");
    // Register pointerdown and pointercancel handlers
    el.onpointerdown = downHandler;
    el.onpointercancel = cancelHandler;
    el.onpointerup = cancelHandler;
  })();
</script>